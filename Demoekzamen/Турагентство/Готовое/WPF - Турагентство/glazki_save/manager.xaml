<Page x:Class="glazki_save.manager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:glazki_save"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="manager">

    <Grid>
        <Grid Grid.Row="1" Background="#a67512">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0,0,0">
                <Border Height="32" Width="32" Margin="0,0,16,0" Background="White">
                    <Image Name="UserPhoto" Height="30" Width="30"/>
                </Border>

                <TextBlock Name="UserTB" Text="Петров А О" VerticalAlignment="Center" Margin="0,0,16,0" Foreground="White"/>
                <TextBlock Name="RoleTB" Text="(Старший смены)" VerticalAlignment="Center" Foreground="White"/>
            </StackPanel>
            <TextBlock Grid.Column="1" Name="TimeTB" Text="00:00:00" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" Margin="0,0,16,0"/>

            <Frame x:Name="MainFrame"></Frame>
        </Grid>
    </Grid>
</Page>
